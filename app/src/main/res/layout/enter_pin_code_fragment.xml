<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.createPinCode.CreatePinCodeFragment">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_photo_shapeable_image_view"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="20"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:srcCompat="@drawable/ic_launcher_background" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:lines="2"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <ImageView
            android:id="@+id/indicator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/ic_indicator_unselected_24dp" />

        <ImageView
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/ic_indicator_unselected_24dp" />

        <ImageView
            android:id="@+id/indicator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/ic_indicator_unselected_24dp" />

        <ImageView
            android:id="@+id/indicator4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/ic_indicator_unselected_24dp" />

    </LinearLayout>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:text="@string/incorrect_pin_code"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:visibility="invisible" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="60"
        android:columnCount="3"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:rowCount="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_exit"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Выйти" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            style="@style/RoundButton"
            android:background="@drawable/round_shape_btn"
            android:text="9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:foreground="@drawable/ic_backspace_24dp"
            android:foregroundGravity="center" />
    </GridLayout>

</LinearLayout>